@model WebFeriaVirtual.Negocio.UsuarioInterno
@{
    ViewBag.Title = "Login";
}

<h2>Ingresa tus credenciales</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(u => u.Correo, "Correo")
    @Html.TextBoxFor(u => u.Correo, new { type = "correo" })
    <br />
    @Html.LabelFor(u => u.Contraseña, "Contraseña")
    @Html.PasswordFor(u => u.Contraseña)
    <br />
    <button>Ingresar</button>
}
<br />

@TempData["Mensaje"]