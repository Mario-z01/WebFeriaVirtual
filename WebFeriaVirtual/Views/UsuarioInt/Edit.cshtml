@model WebFeriaVirtual.Negocio.UsuarioInterno
@{
    ViewBag.Title = "Edit";
}

<h2>Modificar datos Usuario cliente Interno</h2>
@Html.ActionLink("Lista de usuarios internos", "ListaUsuInt")
@using (Html.BeginForm())
{
    @Html.HiddenFor(u => u.Id)
    <br />
    @Html.LabelFor(u => u.IdRegion, "Region")
    <br />
    @Html.DropDownListFor(u => u.IdRegion, new SelectList(ViewBag.regiones, "Id", "Nombre"))
    <br />
    @Html.LabelFor(u => u.Nombre)
    <br />
    @Html.TextBoxFor(u => u.Nombre)
    <br />
    @Html.LabelFor(u => u.Direccion)
    <br />
    @Html.TextBoxFor(u => u.Direccion)
    <br />
    @Html.LabelFor(u => u.Telefono)
    <br />
    @Html.TextBoxFor(u => u.Telefono)
    <br />
    @Html.LabelFor(u => u.Correo)
    <br />
    @Html.TextBoxFor(u => u.Correo)
    <br />
    @Html.LabelFor(u => u.Contraseña)
    <br />
    @Html.TextBoxFor(u => u.Contraseña)
    <br />
    <br />
    <button>Guardar datos</button>
}